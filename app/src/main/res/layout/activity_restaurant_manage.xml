<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_height="230dp"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/im_root"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_res_cus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:background="@color/trans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="8dp"
                        android:id="@+id/im_close"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/tv_type"
                        android:visibility="visible"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/btn_add"
                        android:gravity="center"
                        android:background="@drawable/bg_circle_green"
                        android:layout_margin="8dp"
                        android:layout_gravity="bottom"
                        android:layout_width="36dp"
                        android:layout_height="36dp">

                        <ImageView
                            android:id="@+id/im_add"
                            android:layout_gravity="center|center_horizontal"
                            android:src="@drawable/ic_add_white_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/v_branch"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="@string/discount"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/im_edit"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_edit_yellow"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@color/bg_discount"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_discount_blue"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_discount"
                                android:text="Discount: 30% - Code: GOT"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_ship"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                        <TextView
                            android:id="@+id/tv_freeship"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:text="FreeShip under 2km, only 15000VND"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:text="@string/branch"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_partner"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_edit"
            android:gravity="center"
            android:background="@drawable/bg_circle_yellow"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:layout_width="56dp"
            android:layout_height="56dp">

            <ImageView
                android:layout_gravity="center|center_horizontal"
                android:src="@drawable/ic_edit_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>