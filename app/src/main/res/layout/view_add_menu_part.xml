<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/blue"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        android:text="@string/add_menu"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:maxLines="1"
        android:ems="10"
        android:id="@+id/ed_name"
        android:imeOptions="actionNext"
        android:hint="@string/menu_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:maxLines="1"
        android:ems="10"
        android:inputType="number"
        android:id="@+id/ed_price"
        android:hint="@string/menu_price"
        android:imeOptions="actionNext"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:maxLines="1"
        android:ems="10"
        android:id="@+id/ed_des"
        android:hint="@string/menu_des"
        android:imeOptions="actionDone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center"
        android:id="@+id/spn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:visibility="gone"
        android:maxLines="1"
        android:ems="10"
        android:id="@+id/ed_type"
        android:hint="@string/type_menu"
        android:imeOptions="actionDone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/btn_choosePho"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_menu_add"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera_enhance_white_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/choose_photo"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_cancel"
            android:background="@color/mess2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_edit"
            android:background="@color/mess1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/add"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>