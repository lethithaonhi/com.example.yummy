<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="8dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:background="@drawable/bg_checkbox_city"
        android:button="@drawable/bg_button_checkbox_city"
        android:id="@+id/checkbox_city"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_nameCity"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="HCM City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_countCity"
        android:text="7829 places"
        android:gravity="end"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>