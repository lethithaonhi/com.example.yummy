<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_admin"
            android:id="@+id/my_awesome_toolbar"
            android:layout_height="230dp"
            android:layout_width="match_parent">

            <LinearLayout
                android:background="@color/trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="8dp"
                    android:id="@+id/im_close"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/tv_type"
                    android:visibility="visible"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/btn_add"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_blue"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    android:layout_width="36dp"
                    android:layout_height="36dp">

                    <ImageView
                        android:layout_gravity="center|center_horizontal"
                        android:src="@drawable/ic_add_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/v_account"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/v_admin"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_account_detail"
                android:layout_width="350dp"
                android:layout_height="100dp">

                <ImageView
                    android:src="@drawable/admin_account"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/white"
                    android:text="@string/account_admin"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_partner"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_account_detail"
                android:layout_width="350dp"
                android:layout_height="100dp">

                <ImageView
                    android:src="@drawable/partner"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/white"
                    android:text="@string/account_partner"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_cus"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_account_detail"
                android:layout_width="350dp"
                android:layout_height="100dp">

                <ImageView
                    android:src="@drawable/customer"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/white"
                    android:text="@string/account_custom"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rcv_partner"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>